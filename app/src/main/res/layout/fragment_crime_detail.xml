<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/crime_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Crime Title"
            android:inputType="text" />

        <EditText
            android:id="@+id/crime_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Crime Details"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/crime_date_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Today" />

        <CheckBox
            android:id="@+id/crime_solved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Solved" />

        <Button
            android:id="@+id/choose_suspect_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose Suspect" />

        <Button
            android:id="@+id/send_report_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Crime Report" />

    </LinearLayout>
</ScrollView>